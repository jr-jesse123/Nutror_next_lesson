{
    "name": "Hello World",
    "description":  "Base Level Extension",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "./popout/popout.html"
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js":["contentScript.js"],
            "run_at": "document_idle",
            "all_frames": true   
        }
    ],
    "permissions": ["activeTab"]
}